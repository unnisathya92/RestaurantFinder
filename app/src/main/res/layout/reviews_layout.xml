<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="divakar.mad.ids.restaurant_finder.Review">


    <TextView
        android:id="@+id/textView"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:text="Restaurant Review"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="12dp" />

    <EditText
        android:id="@+id/rname"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Input restaurant name to view review"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="71dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/showreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Review"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_below="@+id/rname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/reviewresults"
        android:layout_width="319dp"
        android:layout_height="285dp"
        android:text=""
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="191dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

</RelativeLayout>